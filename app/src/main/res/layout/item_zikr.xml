<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/zikr_arabic"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/zikr_uzbek"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="استغفر الله العظيم و أتوبُ إليهِ"
                android:layout_marginStart="12sp"
                app:layout_constraintEnd_toStartOf="@id/counter"
                android:layout_width="0dp"
                android:layout_marginEnd="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/zikr_uzbek"
                android:layout_marginTop="6dp"
                tools:text="Астағфируллоҳал ъазийм ва атубу илайҳ."
                app:layout_constraintTop_toBottomOf="@id/zikr_arabic"
                app:layout_constraintStart_toStartOf="@id/zikr_arabic"
                android:layout_width="0dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@id/zikr_arabic"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/counter"
                tools:text="15"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>